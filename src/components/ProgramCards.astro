<section>

    <div class="container">
        <div class="card__intro">
            <h3>Inizia da qui</h3>
            <h2>Percorsi</h2>
        </div>
        <div class="card__wrapper">
            
            <a href="/benessere-donna" class="card">
                <img class="card__img" src="/media/segnaposto.webp" alt="" >
                <p class="card__title">benessere donna</p>
            </a>

            <a href="/disturbi-alimentari" class="card">
                <img class="card__img" src="/media/segnaposto.webp" alt="" transition:name="img" transition:persist>
                <p class="card__title">disturbi alimentari</p>
            </a>
    
            
        </div>
        
    </div>

</section>

<style>

    .card__intro {
        display: block;
        text-align: center;
        margin-block: 4rem;
        padding-block: var(--space-xxl);

    }

    .card__intro > h2 {
        font-size: var(--text-xxl);
        text-transform: uppercase;
    }

    .card__wrapper {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
        gap: 1rem;
        padding-block: var(--space-xxl);
    }

    .card {
        display: flex;
        flex-direction: column;
        border: 1px solid white;
        gap: 1rem;
        position: relative;
    }

    .card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.1); /* Dark overlay color */
        pointer-events: none;
        z-index: 1;
    }

    

    .card__img {
        width: 100%;
        height: 60rem;
        object-fit: cover;
    }

    .card__title {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translate(-50%);
        margin-bottom: 1em;
        font-size: var(--text-md);
        font-weight: bold;
        z-index: 2;
        color: var(--white)
    }

</style>