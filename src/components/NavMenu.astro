---

const navmenu: Menu[] = [{
        label: "Home",
        href: "/",
    },
    {
        label: "Chi sono",
        href: "/chi-sono",
    },
    {
        label: "Cultura",
        href: "/cultura",
    },
    {
        label: "Percorsi",
        href: "/percorsi",
    },
    {
        label: "Prenota",
        href: "/prenota",
    }
];

---

<ul class="nav">
    {navmenu.map((item, index) => (
        <li class="nav-item"><a href={item.href} target={item.external ? "_blank" : "" } rel={item.external ? "noopener" : "" }>
          {item.label}
        </a></li>
        ))}
