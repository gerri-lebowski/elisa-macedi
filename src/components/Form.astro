<div class="container">
    <h3>Vuoi maggiori info? Contattami!</h3>

    <form action="https://api.web3forms.com/submit" method="POST" class="form">

            <!-- Fields -->
            <input name="name" type="text" id="name" placeholder="Nome" required>
            <input name="email" type="email" id="email" placeholder="Email" required>
            <input name="phone" type="text" id="phone" placeholder="Telefono" required>
            <textarea name="message" id="message" rows="4" placeholder="Come posso aiutarti?"></textarea>

            <!-- Options -->
            <input type="hidden" name="apikey" value="4fc9dcba-3ef9-4188-9147-213ed8e035d7">
            <input type="hidden" name="redirect" value="https://web3forms.com/success">
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
            <div class="h-captcha"
            data-captcha="true"
            data-lang="it"
            data-theme="light"
            ></div>

            <!-- Button -->
            <button type="submit">Send</button>
    </form>
</div>

<style>

    .form{
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        gap: 1rem;
        margin-block: 2rem;
    }

    .form > input, textarea {
        width: 100%;
        padding: 1rem;
        border: 1px solid var(--primary);
        border-radius: .25rem;
    }

    .form > input::placeholder {
        font-size: 1rem;
        margin-left: 1rem;
    }

    .form > textarea::placeholder {
        font-family: 'inter',sans-serif;
        font-size: 1rem;
        margin-left: 1rem;
    }

    .form > button {
        font-family: 'inter', sans-serif;
        font-size: 1rem;
        font-weight: 700;
        padding: 1.25rem;
        border: none;
        border-radius: .25rem;
        background: var(--link);
        color: #fff;
        cursor: pointer;
    }

</style>