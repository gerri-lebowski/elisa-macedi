<div class="container">
    

    <form action="https://api.web3forms.com/submit" method="POST" class="form">

        <h3>Prenota la tua seduta</h3>
            <!-- Fields -->
            <input name="name" type="text" id="name" placeholder="Nome" required>
            <input name="email" type="email" id="email" placeholder="Email" required>
            <input name="phone" type="text" id="phone" placeholder="Telefono" required>
            <textarea name="message" id="message" rows="4" placeholder="Come posso aiutarti?"></textarea>
            <input
            name="privacy policy"
            id="privacy" 
            type="checkbox"
            required
            />
            <label for="privacy">
            Acconsento al trattamento dei miei dati personali come da
            <a href="/privacy-policy">Privacy Policy</a>
            </label> 
            

            <!-- Options -->
            <input type="hidden" name="apikey" value="fd052fe9-982c-4947-832b-67bc603f35ff">
            <input type="hidden" name="redirect" value="http://localhost:4321/thanks">
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
            <div class="h-captcha"
            data-captcha="true"
            data-lang="it"
            data-theme="light"
            ></div>

            <!-- Button -->
            <button type="submit">Invia la richiesta</button>
    </form>
</div>

<style>
    .form{
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        gap: var(--space-lg);
        margin-block: 10rem;
        text-align: center;
    }

    .form > h3 {
        margin-bottom: 4rem;
    }

    .form > input, textarea {
        width: 100%;
        padding: var(--space-md);
        border: 1px solid var(--primary);
        border-radius: .25rem;
    }

    .form > input::placeholder {
        font-family: 'Jost', sans-serif;
        font-size: var(--text-xs);
        margin-left: 1rem;
    }

    .form > textarea::placeholder {
        font-family: 'Jost',sans-serif;
        font-size: var(--text-xs);
        margin-left: 1rem;
    }

    .form > button {
        font-family: 'Jost', sans-serif;
        font-size: var(--text-md);
        font-weight: 700;
        padding: 1.25rem;
        border: none;
        border-radius: .25rem;
        background: var(--link);
        color: #fff;
        cursor: pointer;
    }

</style>