---
import NavMenu from "./NavMenu.astro";

---

<header>
    <div class="header">
        <a href="/" class="logo"><img src="/media/logo.png" alt=""></a>
        <NavMenu />
    </div>
</header>


<style>

    header {
        width: 100%;
        position: fixed;
        top: 0;
        z-index: 1000;
        background: var(--primary);
    }

    .logo > img {
        width: 20rem;
    }
    .logo > p {
        font-size: 1.4rem;
        font-weight: normal;
    }

    .header{
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-inline: 2rem;
        padding-block: 2em;
        
    }

</style>